package tp1.ej7;

import java.util.ArrayList;

public class InvertirLista {
	public void Inversi√≥n (ArrayList<Integer> lista) {
		Integer nodo1, nodo2;
		
		for (int i = 0; i < lista.size(); i++) {
			nodo1 = lista.getLast() - i;
			nodo2 = lista.getFirst() + i;
			lista.add(i, nodo1);
			lista.add(lista.size() - i, nodo2);
		}
	}
	
}
